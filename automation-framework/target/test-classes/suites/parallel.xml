<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Parallel Suite" parallel="methods" thread-count="3" verbose="1">
    <listeners>
        <listener class-name="com.automation.listeners.TestListener"/>
        <listener class-name="com.automation.listeners.AnnotationTransformer"/>
    </listeners>

    <test name="Parallel UI Tests">
        <classes>
            <class name="com.automation.ui.LoginTest"/>
            <class name="com.automation.ui.HomePageTest"/>
            <class name="com.automation.ui.DashboardTest"/>
        </classes>
    </test>

    <test name="Parallel API Tests">
        <classes>
            <class name="com.automation.api.AuthApiTest"/>
            <class name="com.automation.api.UserApiTest"/>
        </classes>
    </test>
</suite>
