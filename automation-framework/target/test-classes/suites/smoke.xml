<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Smoke Suite" verbose="1">
    <listeners>
        <listener class-name="com.automation.listeners.TestListener"/>
        <listener class-name="com.automation.listeners.AnnotationTransformer"/>
        <listener class-name="com.automation.listeners.MethodInterceptor"/>
    </listeners>

    <test name="Smoke - UI Tests">
        <parameter name="category" value="SMOKE"/>
        <classes>
            <class name="com.automation.ui.LoginTest"/>
            <class name="com.automation.ui.HomePageTest"/>
            <class name="com.automation.ui.DashboardTest"/>
            <class name="com.automation.ui.checkout.CheckoutTest"/>
        </classes>
    </test>

    <test name="Smoke - API Tests">
        <parameter name="category" value="SMOKE"/>
        <classes>
            <class name="com.automation.api.AuthApiTest"/>
            <class name="com.automation.api.UserApiTest"/>
        </classes>
    </test>
</suite>
